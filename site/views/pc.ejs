<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/assets/css/header.css">
        <link rel="stylesheet" href="/assets/css/accueil.css">
        <link rel="stylesheet" href="/assets/css/footer.css">
    </head>
    <body>
        <%- include('../partials/header') %>
        <div class="support">

            <div class="carouselles">
                <div id="slider">
                <% games.forEach(game => { %>
                    <div class="slide" >
                        <a href="/jeux/<%= game.id %>">
                            
                            <img src="/assets/img/<%= game.img %>" alt="<%= game.name %>" class="game_img">
                        </a>
                        <div class="info">
                            <p class="name"><%= game.name %></p>
                            <p class="promo">-<%= game.promo %>%</p>
                        </div>
                        
                    </div>
                <% }); %>
                
                </div>
                <div class="arrow prev" onclick="prevSlide()">&#10094;</div>
                <div class="arrow next" onclick="nextSlide()">&#10095;</div>
                <div class="dots"></div>
            </div>
        </div>

        <%- include('../partials/footer') %>
        
        <script src="/assets/js/accueil.js" async defer>
            
        </script>
    </body>
</html>