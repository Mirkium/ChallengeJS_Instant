<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NovaMarket - Accueil</title>
  <link rel="stylesheet" href="/assets/css/accueil.css">
  <link rel="stylesheet" href="/assets/css/partials_css/header.css">
  <link rel="stylesheet" href="/assets/css/partials_css/footer.css">
</head>
<body>
  <%- include('../partials/header') %>

  <div class="support">
    <div class="carouselles">
        <div id="slider">
        <% games.forEach(game => { %>
            <div class="slide" >
                <a href="/jeux/<%= game.id %>">
                  <p id="promo" data-franchise="<%= game.promo %>">-<%= game.promo %>%</p>
                  <img src="/assets/img/<%= game.img %>" alt="<%= game.name %>" id="game_img" data-franchise="<%= game.img %>">
                  
                </a>
                <div class="info">
                  <p id="name" data-franchise="<%= game.name %>"><%= game.name %></p>
                  
                </div>
                
            </div>
        <% }); %>
        
        </div>
        <div class="arrow prev" onclick="prevSlide()">&#10094;</div>
        <div class="arrow next" onclick="nextSlide()">&#10095;</div>
        <div class="dots"></div>
    </div>
  </div>

  <main>
    <section id="trends" class="trends">
      <h2>Tendances</h2>
      <div class="games">
        <% games.forEach(game => { %>
          <div class="game">
            <a href="/jeux/<%= game.id %>">
              <img src="/assets/img/<%= game.img %>" alt="<%= game.name %>">
            </a>
            <div class="game-info">
              <span class="discount">-<%= game.promo %>%</span>
              <span class="title"><%= game.name %></span>
              <span class="price"><%= game.prix %>â‚¬</span>
            </div>
          </div>
        <% }); %>
      </div>
    </section>
  </main>

  <%- include('../partials/footer') %>
  
  <script src="/assets/js/accueil.js"></script>
  <script src="/assets/js/like.js"></script>
</body>
</html>
